<% @catalogue.cat_editorial.each do |editorial| %>
    <div class="col-4 col-sm-2 editorial">
        <%= link_to image_tag((editorial.img_url.url || 'grey_square.svg'), class: "img-fluid w-100"), editorial.link_url %>
        <% if user_signed_in? %>
            <%= link_to "X", catalogue_cat_editorial_path(editorial.catalogue, editorial), method: :delete, data: { confirm: 'Are you sure?'}, class: 'delete' %>
        <% end %>    
    </div>
<% end %>